<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_fragment"
    tools:context=".view.RegistrationFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="301dp"
        android:layout_height="561dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_height="45dp"
            android:text="Registration"
            android:layout_width="wrap_content"
            android:textColor="@color/brick_red"
            android:textSize="25sp"
            android:textStyle="italic"/>

        <EditText
            android:id="@+id/name_in_registration"
            android:layout_marginTop="50dp"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:hint="Name"
            android:textSize="20dp"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="116dp" />

        <EditText
            android:id="@+id/email_in_registration"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Email Id"
            android:textSize="20dp"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="116dp" />

        <EditText
            android:id="@+id/password_in_registration"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Password"
            android:textSize="20dp"
            android:inputType="numberPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="116dp"/>

        <EditText
            android:id="@+id/confirmPwd_in_registration"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Confirm_passwod"
            android:textSize="20dp"
            android:inputType="numberPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="116dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Submit"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:background="@drawable/custom_edit_text"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>